		{
			count = 0;
			while (count < 8)
			{
				system("color 0A");
				cout << "\n   ***TEBRIKLER***\n ***SIZ MILYONCUSUNUZ***\n\n";
				Sleep(100);
				system("cls");
				system("color 09");
				cout << "\n   ***TEBRIKLER***\n ***SIZ MILYONCUSUNUZ***\n\n";
				Sleep(100);
				system("cls");
				system("color 0A");
				cout << "\n   ***TEBRIKLER***\n ***SIZ MILYONCUSUNUZ***\n\n";
				Sleep(100);
				system("cls");
				Sleep(1);
				count++;
			}
			restart = 1;
			system("color 07");
		}
		while (restart == 1)
		{
			cout << "\n\n Yeniden oynamaq isteyirsiniz?\n\n"
				<< "\tBeli: [Y]\t\tXeyr: [N]\n\n";
			cout << "\n\n Sechim edin: "; cin >> input;
			if (input == 'Y' || input == 'y')
			{
				sual = 1;
				input = 0;
				dosta_zeng = 0;
				komek_50x50 = 0;
				zal_komek = 0;
				system("cls");
				restart = 0;
			}
			else if (input == 'N' || input == 'n')
				return 0;
			else
			{
				cout << "\n Daxiletme sehvdir...\n\n";
				system("pause");
				system("cls");
			}
		}
	} while (true);
}
